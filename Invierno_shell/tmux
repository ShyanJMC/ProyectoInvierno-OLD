#!/bin/bash

### Variables
COREDIR=/var/lib/invierno/core


### Set the option 
$COREDIR/tmux set-option remain-on-exit on

### Create the session
$COREDIR/tmux new-session -d -s inviernoshell
$COREDIR/tmux send-keys -t inviernoshell:0 'invierno_shell ' C-m

### Create the window and set the same.
$COREDIR/tmux rename-window ' Invierno Shell'
$COREDIR/tmux select-window -t invshell:0

### Exec commands
$COREDIR/tmux splitw -t inviernoshell:0
$COREDIR/tmux send-keys -t inviernoshell:0 'clear && echo "Docker Containers;" && docker ps -a' C-m


### Attach to the sesion
$COREDIR/tmux -2 attach-session -t inviernoshell
